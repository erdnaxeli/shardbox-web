{% extends "layout.html.j2" %}
{% import "macros/date.j2" %}
{% import "macros/links.j2" %}
{% import "macros/shard-card.j2" %}

{% set uncategorized = category.slug == "Uncategorized" %}

{% block page_title %}{{ category.name }} on Shardbox{% endblock %}
{% block main %}
  <header>
    <div class="breadcrumbs">
      <a href="/categories" class="breadcrumb">Categories</a>
    </div>
    <h1>{{ category.name }}</h1>
  </header>

  {% if category.description %}
    <p>{{ category.description | markdown_inline }}</p>
  {% endif %}

  <h2>{{ entries_count }} shards</h2>

  <div class="category-entries">
  {% for shard in shards %}
    <div class="category-entry">
      {{ shard_card(shard, shard, shard.categories,
        repo_ref = shard.canonical_repo.ref,
        repo = shard.canonical_repo,
        released_at = shard.released_at,
        version = shard.version,
        show_topics = true,
        show_description = true, show_created_at = false) }}
      {% if uncategorized -%}
        <div class="shards-spec">- {{ shard.canonical_repo.ref.resolver }}: {{ shard.canonical_repo.ref.url }}
  description: {{ shard.description | default(shard.canonical_repo.metadata.description) }}</div>
        {% set homonymous = homonymous_shards[shard.name] %}
        {% if homonymous and homonymous | length > 1 %}
          <div class="homonymous_shards">
            <small>Similar:</small>
            {% for entry in homonymous if entry.qualifier != shard.qualifier %}
              <a class="shard-name" href="{{ shard_path(entry) }}">
                {{ shard_name(entry) }}
              </a>
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}
    </div>
  {% endfor %}
  </div>

  <div class="category-edit">
    <a href="https://github.com/shardbox/catalog/edit/master/catalog/{{ category.slug }}.yml" class="btn edit">{{ icon("edit") }} Edit this category</a>
  </div>
{% endblock %}
